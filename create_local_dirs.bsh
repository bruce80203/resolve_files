#!/bin/bash

file=$(hostname).chk_dirs.param

IFS=$'\n'
for rec in $(cat $file); do
    dir=$(echo $rec | cut -f1 -d\| | sed 's/#//g')
    echo "checking for $dir"
    if [ ! -e $dir ]; then
        echo "creating $dir"
        mkdir -p "$dir"
    else
        echo "$dir exists"
    fi
done

if [ ! -e ~/mnt/volume1 ]; then
    echo "creating ~/mnt/volume1"
    mkdir -p ~/mnt/volume1
fi
